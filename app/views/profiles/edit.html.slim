.width-750

  = form_for @current_profile, local: true do |f|
    .card
      header.card-header
        p.card-header-title = t('nav.profile_settings')
        = render partial: 'profiles/selector'

      .card-content
        .field.is-horizontal
          .field-label.is-switch-label
            = f.label :allow_dm, t('profiles.allow_dm'), class: 'label'
          .field-body
            .field
              .control
                = f.check_box :allow_dm, class: 'switch is-rounded'
                = f.label :allow_dm, '&nbsp;'.html_safe, class: 'label'
                = tooltip_btn('profiles.allow_dm_tooltip', 'nudge-up')

        .field.is-horizontal
          .field-label.is-switch-label
            = f.label :weekly_report, t('profiles.weekly_report'), class: 'label'
          .field-body
            .field
              .control
                = f.check_box :weekly_report, class: 'switch is-rounded'
                = f.label :weekly_report, '&nbsp;'.html_safe, class: 'label'
                = tooltip_btn('profiles.weekly_report_tooltip', 'nudge-up')

    br
    = submit_button
